<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="place"
            type="com.minsk.guru.domain.model.Place" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{place.name}"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_place_address"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="TIDEN" />

                <TextView
                    android:id="@+id/tv_place_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{place.address}"
                    app:layout_constraintBottom_toTopOf="@+id/tv_place_category"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place_name"
                    tools:text="ул. Кульман, 3" />

                <TextView
                    android:id="@+id/tv_place_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{place.category}"
                    app:layout_constraintBottom_toTopOf="@id/tv_place_opening_hours"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place_address"
                    tools:text="Кафе" />

                <TextView
                    android:id="@+id/tv_place_opening_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{place.openingHours}"
                    app:layout_constraintBottom_toTopOf="@id/tv_place_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place_category"
                    tools:text="9:00 - 16:00" />

                <TextView
                    android:id="@+id/tv_place_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{place.phone}"
                    app:layout_constraintBottom_toTopOf="@id/tv_place_url"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place_opening_hours"
                    tools:text="+375296333333" />

                <TextView
                    android:id="@+id/tv_place_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{place.url}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_place_phone"
                    tools:text="minskguru.by" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_prove_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/prove_you_ve_been_here"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/tv_prove_calculation_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/prove_calculation_body"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/edit_calculation_result"
            app:layout_constraintStart_toStartOf="@id/tv_prove_hint"
            app:layout_constraintTop_toBottomOf="@+id/tv_prove_hint" />

        <EditText
            android:id="@+id/edit_calculation_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_prove_calculation_body"
            app:layout_constraintEnd_toEndOf="@+id/tv_prove_hint"
            app:layout_constraintStart_toEndOf="@+id/tv_prove_calculation_body"
            app:layout_constraintTop_toTopOf="@id/tv_prove_calculation_body" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>