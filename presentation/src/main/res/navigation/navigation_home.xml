<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.minsk.guru.screen.home.places.categories.CategoriesFragment"
        android:label="CategoriesFragment"
        tools:layout="@layout/fragment_categories">

        <action
            android:id="@+id/action_categoriesFragment_to_placesFragment"
            app:destination="@id/placesFragment" />

    </fragment>

    <fragment
        android:id="@+id/addPlaceFragment"
        android:name="com.minsk.guru.screen.home.addplaces.AddPlacesFragment"
        android:label="AddPlacesFragment"
        tools:layout="@layout/fragment_add_places" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.minsk.guru.screen.home.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/placesFragment"
        android:name="com.minsk.guru.screen.home.places.places.PlacesFragment"
        android:label="PlacesFragment"
        tools:layout="@layout/fragment_places" />

</navigation>