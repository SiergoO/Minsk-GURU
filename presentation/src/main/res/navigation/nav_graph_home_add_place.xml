<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home_add_place"
    app:startDestination="@id/addPlaceFragment">

    <fragment
        android:id="@+id/addPlaceFragment"
        android:name="com.minsk.guru.screen.home.addplaces.addplaces.AddPlacesFragment"
        android:label="AddPlacesFragment"
        tools:layout="@layout/fragment_add_places">

        <action
            android:id="@+id/action_addPlacesFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/placeDetailsFragment"
        android:name="com.minsk.guru.screen.home.addplaces.placedetails.PlaceDetailsFragment"
        android:label="PlaceDetailsFragment"
        tools:layout="@layout/fragment_place_details" >

        <argument
            android:name="place"
            app:argType="com.minsk.guru.model.Place" />

        <argument
            android:name="isVisited"
            app:argType="boolean" />

    </fragment>

</navigation>